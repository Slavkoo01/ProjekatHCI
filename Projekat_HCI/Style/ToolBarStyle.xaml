<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="DarkBlumine" Color="#07181D"/>
    <SolidColorBrush x:Key="DarkMing" Color="#22464F"/>

    <Style x:Key="ToolBarStyle" TargetType="ToolBar">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToolBar">
                    <Border BorderBrush="{StaticResource DarkBlumine}"
                            BorderThickness="7"
                            CornerRadius="5"
                            Height="55"
                            Margin="3 0 2 0"
                            Background="{StaticResource DarkMing}">
                        <!-- Set the DockPanel as the ItemsPanel -->
                        <DockPanel IsItemsHost="True"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>